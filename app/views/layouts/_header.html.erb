<header class="container mx-auto md:px-1 lg:px-24 xl:px-48 sticky top-0 z-40">
  <div class="flex justify-between items-center mb-8 px-8 py-4 bg-white rounded-b-lg shadow-2xl">
    <h1 class="font-bold text-4xl">
      <%= link_to "Posts", root_path %>
      <span class="text-red-500">
        <%= @post_count if action_name == "index" && controller_name == "posts" %>
      </span>
    </h1>

    <!-- Mobil -->
    <div data-controller="menu" class="relative md:hidden">
      <button type="button" class="hover:text-blue-600 pl-4" data-action="click->menu#open" >
        <%= heroicon('menu', class: "transiton-all", "data-menu-target": "menuIcon") %>
        <%= heroicon('x', class: "transiton-all hidden", "data-menu-target": "xIcon") %>
      </button>
      <div data-menu-target="dropdown" class="absolute w-28 right-0 bg-gray-900 shadow-2xl rounded-lg text-white hidden">
        <ul>
          <% if signed_in? %>
            <%= link_to 'New post', new_post_path, class: 'px-4 pt-4' %>
            <%= link_to 'Profile', user_path(current_user), class: 'px-4' %>
            <%= link_to "Logout", logout_path, data: {
                            turbo_method: :delete,
                            turbo_confirm: "Are you sure?"
                          }, class: 'px-4 pb-4' %>
          <% else %>
            <%= link_to 'Register', new_user_path, class: 'px-4 pt-4' %>
            <%= link_to 'Login', login_path, class: 'px-4 pb-4' %>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="hidden md:inline-flex ">
      <% if signed_in? %>
        <%= link_to "New post", new_post_path, class: "group-button py-2 bg-blue-500" %>
        <%= link_to "Profile", profile_path(current_user.username), class: "group-button py-2 bg-yellow-500" %>
        <%= link_to "Logout", logout_path, data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      }, class: 'group-button py-2 bg-red-500' %>
      <% else %>
        <%= link_to "Register", new_user_path, class: "group-button py-2 bg-blue-500 rounded-l-lg" %>
        <%= link_to "Login", login_path, class: "group-button py-2 bg-green-500 rounded-r-lg" %>
      <% end %>
    </div>
  </div>
</header> 
