<% if ["users"].include?(params[:controller]) %>
  <div data-controller="postFilter" class="fixed right-0 top-24 z-50 transition-transform duration-500 translate-x-[calc(100%-24px)]">

    <div class="grid grid-flow-col">
      <div class="">
        <button type="button" class="bg-blue-500 hover:text-gray-200 text-white shadow-2xl rounded-l-lg" data-action="click->postFilter#toggle">
          <%= heroicon('chevron-left', class: "origin-center transition-all duration-500",  "data-postFilter-target": "button") %>
        </button>
      </div>

      <div class="bg-gray-800 text-white shadow-2xl px-3 py-1 rounded-bl-lg">
        <% Post.statuses.each do |status| %>
          <%= link_to status[0].capitalize, "#{request.path}?filter=#{status[0]}", class: 'block hover:text-gray-300' %>
        <% end %>
      </div>
    </div>

  </div>
<% end %>